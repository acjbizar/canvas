{
    "@context": "http://schema.org",
    "@type": "Product",
    "additionalType": "VisualArtwork",
    "name": "{{ artwork.title }}",
    {%- if artwork.image %}
    "image": "{{ artwork.image }}",{% endif %}
    "description": "{{ artwork.description }}",
    "url": "{{ artwork.url }}",
    {%- if artist.url or artist.name %}
    "creator": [
        {
            "@type": "Person",
            {%- if artist.name %}
            "name": "{{ artist.name }}",
            {% endif %}
            {%- if artist.url %}
            "url": "{{ artist.url }}"{% if artist.twitter %},
            {% endif %}
            "sameAs": "https://twitter.com/{{ artist.twitter|lower }}"{% endif %}
        }
    ],
    {% endif %}
{%- if offer %}
    "offers": [
        {
            "@type": "Offer",
            "availability": "https://schema.org/InStock",
            "price": "{{ offer.price }}",
            "priceCurrency": "{{ offer.currency }}"
        }
    ],
{% endif %}
    "artMedium": "digital",
    "artform": "website",
    "accessModeSufficient": "visual",
    "interactivityType": "mixed"
}